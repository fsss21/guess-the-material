{
  "name": "guess-the-material",
  "version": "1.0.0",
  "type": "module",
  "description": "A React game to guess materials",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "server": "node server/index.js",
    "build:server:win": "pkg server/index.js --targets node18-win-x64 --output build/launch.exe",
    "build:server:mac": "pkg server/index.js --targets node18-macos-x64 --output build/server",
    "build:win": "npm run build && npm run build:server:win",
    "build:mac": "npm run build && npm run build:server:mac",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "build/**/*"
    ],
    "outputPath": "build"
  }
}